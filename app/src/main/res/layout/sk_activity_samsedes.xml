<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sk_SamsedesActivity">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="390dp"
        android:layout_height="270dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/textView34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/samsades" />

    <TextView
        android:id="@+id/textView33"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="SAMSADES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="322dp"
        android:layout_height="129dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="Samsades bir çeşit şerbetli tatlıdır. İzmir'in Seferihisar ilçesinde yapılmaktadır. Muska biçiminde bir tatlıdır. Lor, tarçın ve şeker hamur içine konulup kızartılması ile yapılır."
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />
</androidx.constraintlayout.widget.ConstraintLayout>