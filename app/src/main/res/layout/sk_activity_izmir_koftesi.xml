<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sk_izmirKoftesiActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="402dp"
        android:layout_height="412dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kofte" />

    <TextView
        android:id="@+id/textView15"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="İZMİR KÖFTE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="381dp"
        android:layout_height="170dp"
        android:layout_marginStart="9dp"
        android:text="İzmir köfte (Yunanca: Σμυρναίικα σουτζουκάκια, romanize: Smirnaíika soutzoukákia), Türk ve Yunan mutfaklarında yapılan bir köfte türüdür. İlk olarak İzmir'de yaşayan Rumlar tarafından yapılmıştır. Türk-Yunan Savaşı'nın ardından Yunanların Anadolu'dan ayrılmasıyla tarif, Yunanistan'ın çeşitli bölgelerine yayılmıştır."
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />
</androidx.constraintlayout.widget.ConstraintLayout>