<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sk_izmirTarihcesiActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="265dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="313dp"
        android:visibility="visible"
        app:srcCompat="@drawable/izmir"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="576dp"
        android:gravity="center"
        android:text="İZMİR"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="332dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="-310dp"

        android:text="İzmir, 1317 yılında bir Türkmen Bey'i olan Aydınoğlu Umur Bey'in denetimi altına girer. ve Birinci Dünya Savaşı’ndan sonra İzmir başta olmak üzere tüm Ege bölgesi Yunan işgali altında kalmıştır. Hatta Sevr Anlaşması ile başta İzmir olmak üzere, Ege Bölgesi’nin Yunanistan’a bağlanmasını öngörülüyordu. Ancak İzmir’de Gazeteci Hasan Tahsin tarafından atılan ilk kurşun ile direniş başlar ve sonraları bu kurşun Ulusal Kurtuluş Savaşımızın başlangıcını simgeler.  9 Eylül 1922’de Türk Ordusu’nun İzmir’e girmesi ile Yunan işgali sona erer. Ancak, İzmir’de 13 Eylül sabahı Basmane semtinde başlayan yangın,Türkiye Cumhuriyeti’nin kuruluşu sonrası İzmir küllerinden yeniden doğar.  "
        android:textColor="@color/black"
        android:textSize="17sp" />

</RelativeLayout>